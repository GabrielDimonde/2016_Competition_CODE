string greeting;
string name;
string null;
int main()
{
	cout << "!!!HeLLo World!!!" <<;// prints !!!Hello World!!!
	cout << "Please say hi back..." << ;
	cout << "I'm lonely" << ;
	cin >> greeting;
    cout << "HELLOOOOO" << ;
